<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9543b257">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Trabajo Grupal"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/tg"
        android:layout_alignLeft="@+id/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lecciones"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/el"
        android:layout_alignLeft="@+id/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Prueba Evaluativa"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/pe"
        android:layout_alignLeft="@+id/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/ta"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Trabajo Individual"
        android:id="@+id/text"
        android:layout_alignBottom="@+id/ta"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Trabajo Individual"
        android:id="@+id/tis"
        android:layout_alignBottom="@+id/ti"
        android:layout_alignLeft="@+id/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/ti"
        android:layout_alignRight="@+id/ta"
        android:layout_below="@+id/ta"
        android:layout_marginTop="15dp"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tg"
        android:layout_alignRight="@+id/ta"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ti"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/el"
        android:layout_alignRight="@+id/ta"
        android:layout_below="@+id/tg"
        android:layout_marginTop="15dp"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Promedio"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/pr"
        android:layout_alignLeft="@+id/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/pr"
        android:layout_alignRight="@+id/ta"
        android:layout_below="@+id/pe"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/pe"
        android:layout_alignRight="@+id/el"
        android:layout_below="@+id/el"
        android:layout_marginTop="15dp"
        android:textSize="17dp" />

</RelativeLayout>
  </ScrollView>